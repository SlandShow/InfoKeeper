<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password_generator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test_apps.slandshow.infokeeper.PasswordGenerator">

    <TextView
        android:text="Use seek bar to set password length:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/textViewLenghtNumber"
        android:layout_alignBottom="@+id/seekBarPass"
        android:layout_alignParentStart="true"
        android:textColor="@color/blue_accent_700" />

    <TextView
        android:text="Current Length:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarPass"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/textView19"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <SeekBar
        android:id="@+id/seekBarPass"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:max="20"
        android:progress="4"
        android:layout_below="@+id/textViewLogo"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Don't use capital chars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/checkBox"
        android:layout_below="@+id/editTextPass"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="Don't use cursive chars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="Don't use numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Add current password in database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button"
        android:textColor="@color/button_gray" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="password"
        android:ems="10"
        android:id="@+id/editTextPass"
        android:layout_marginTop="38dp"
        android:textColor="@color/redcarpet_splash"
        android:layout_below="@+id/btnGeneratorPass"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/textViewPasswordGenerator"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignStart="@+id/btnGeneratorPass" />

    <Button
        android:text="Generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGeneratorPass"
        android:textColor="@color/button_color"
        android:onClick="onGeneratePass"
        android:layout_below="@+id/textViewPasswordGenerator"
        android:layout_alignEnd="@+id/editTextPass"
        android:layout_marginTop="38dp" />

</RelativeLayout>
